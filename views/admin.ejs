	<!--************************************
			Wrapper Start
	*************************************-->
	<div id="wrapper" class="tg-haslayout">
		<!--************************************
				Header Start
		*************************************-->
		<header id="header" class="tg-haslayout top-header"  ng-controller="topHeaderController">
           <div style="text-align:right">
           	<a href="/user/logout" style="font-size: 18px;padding:10px;color:#fff;margin-top: 20px 0;background-color:#000">LOG OUT</a>
           </div> 
        </header>
		<!--************************************
				Header End
		*************************************-->
		<!--************************************
				Home Slider Start
		*************************************-->
		
		<!--************************************
				Home Slider End
		*************************************-->
		<!--************************************
				Main Start
		*************************************-->
		<main id="main" class="tg-main-section tg-haslayout" ng-controller = "balanceController">
			<div class="container-fluid admin" ng-controller="adminCreateRoomController">
				<div class="row">
					<section class="col-sm-12 col-md-4 col-lg-4">
						<h3>Account Balance</h3>
						<div style="text-align: center;font-size: 22px;margin-top:100px">
							<h5>CURRENT BALANCE</h5>
							<strong>{{balance}}</strong>
						</div>
					</section>
					<section class="col-sm-12 col-md-4 col-lg-4">
						<h3>Stats</h3>
						<div style="width: 80%;font-size: 18px;margin: 0 auto">
							<ul>
								<li>About <strong> {{total}} registered users! </strong></li>
								<li><strong>Patients: </strong> {{patients}}</li>
								<li><strong>Doctors: </strong> {{doctors}}</li>
								<li><strong>Pharmacy: </strong> {{pharmacy}}</li>
								<li><strong>Laboratory: </strong> {{laboratory}}</li>
								<li><strong>Radiology: </strong> {{radiology}}</li>
							</ul>
						</div>
					</section>
					<section class="col-sm-12 col-md-4 col-lg-4">
						<h3>Cash out requests</h3>
						<div ng-repeat ="j in CashOutList" style="font-size:18px;text-align:center;border-bottom:1px solid rgba(0,0,0,0.4);padding:10px">
							<em>{{j.firstname}}</em>
							<em> {{j.lastname}}</em>
							<em ng-if="!j.firstname"> {{j.name}} </em>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
							<small> {{j.date | date : mediumDate}} </small>&nbsp;&nbsp;
							<span ng-click="view(j.date)" style="color:red;text-decoration:underline;cursor:pointer"> Pay! </span>
						</div>
					</section>
				</div><!--end of first section-->

				<div class="row">
					<section class="col-sm-12 col-md-4 col-lg-4">
						<h3>Help requests</h3>
					</section>
					<section class="col-sm-12 col-md-4 col-lg-4">
						<h3>E-scroll</h3>
					</section>
					<section class="col-sm-12 col-md-4 col-lg-4">
						<h3>Reports</h3>
					</section>
				</div><!-- end of seecond section-->
				<div class="row">
					<section class="col-sm-12 col-md-4 col-lg-4">
						<h3></h3>
					</section>
					<section class="col-sm-12 col-md-4 col-lg-4">
						<h3>Verify doctors</h3>
					</section>
					<section class="col-sm-12 col-md-4 col-lg-4">
						<h3>Manage users</h3>
					</section>
				</div><!-- end of seecond section-->					

			</div>

		</main>
		
		<!--************************************
				Footer End
		*************************************-->
	</div>
	<!--************************************
			Wrapper End
	*************************************-->
	<!--************************************
		Sign In Sign Up Light Box Start
	*************************************-->
		
	<!--************************************
		Sign In Sign Up Light Box End
	*************************************-->
		<script type="text/ng-template" id='pay-user.html'>
	         <div class="modal fade">
	          <div class="modal-dialog">
	            <div class="modal-content">
	              <div class="modal-header">
	              </div>              
	              <div class="modal-body" > 
	                 <h3 style="text-align:center">cash out details</h3>
	                 <div>
	                 	<div>
		                 	<label>NAMES: </label>
		                 	<span>{{info.firstname}} {{info.lastname}}</span>
		                 	<span ng-if="!i.firstname">{{info.name}}</span>
	                 	</div>
	                 	<div>
		                 	<label>BANK: </label>
		                 	<span>{{info.bank}}</span>	                 	
	                 	</div>
	                 	<div>
		                 	<label>ACCOUNT NUMBER: </label>
		                 	<span>{{info.account_number}}</span>	                 	
	                 	</div>
	                 	<div>
		                 	<label>PHONE NUMBER: </label>
		                 	<span>+234 {{info.phone}}</span>	                 	
	                 	</div>
	                 	<div>
		                 	<label>AMOUNT TO CASH OUT: </label>
		                 	<span>{{info.amount}}</span>	                 	
	                 	</div>
	                 	<p>Request was made on {{info.date | date: 'mediumDate'}} by {{info.date | date: "mediumTime"}}</p>
	                 </div>
	              </div>
	              <div class="modal-footer">
	                <button type="button" ng-click="goBack()" class="btn btn-primary" data-dismiss="modal">Close</button>	                
	              </div>
	            </div>
	          </div>
	        </div>
	    </script>

