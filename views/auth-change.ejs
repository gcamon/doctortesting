            <!--************************************
                            Main Start
            *************************************-->
            <main id="main" class="tg-haslayout" ng-controller="authChangeController" style="height:100%;margin:100px 0" id="main">
                <section class="container">
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12">                           
                           <h2>Change Phone Number</h2> 
                            <p style="color:#000;text-align:center;background-color:#d7dde4;padding:20px;font-size:18px;margin-bottom:30px" ng-cloak ng-if="!status && message === ''">User verification pin has been sent to {{email}}</p>
                            <p class="number-change" ng-cloak ng-if="status && message === ''" >Enter the pin sent to 0{{phone}} below</p>
                            <p class="number-chang" ng-cloak ng-if="message !== ''" ng-class="{'bg-green-back': isUpdate === true}">{{message}}</p>

                            <form class="form-group"  ng-if="!status">
                                <p ng-if="error" style="color:red" ng-cloak>{{error}}</p>
                                <div >
                                    <label><b>Enter verification pin </b>(get from your email)</label>
                                    <input type="text" ng-model="user.pin" placeholder="Enter pin" class="form-control">
                                </div>
                                 <div class="form-group">
                                    <label><b>New Phone Number</b></label>
                                    <input type="number" ng-model="user.phone" placeholder="Enter new number" class="form-control">
                                </div>
                                 <div>
                                    <button class="btn btn-primary" ng-click="update('phone')">Submit</button>
                                </div>
                            </form>                           

                            
                            <div class="phone-verify" ng-controller="verifyPhoneForChangeController" ng-if='status'>
                                <div style="width:80%;height:530px;;text-align:center;margin-top: 50px">
                                    
                                    <div style="color:red; font-size: 16px" ng-cloak>{{error}}</div>
                                    <input type="text" placeholder="Enter OTP sent to your new number" ng-model="verify.pin" class="form-control">
                                    <div style="padding: 30px">
                                    <button class="btn btn-primary" ng-click="sendForm()">Continue</button>
                                    </div>
                                </div>
                            </div>                            
                            
                        </div>
                         <p ng-if="!isUpdated">Having problem with the authentication process? <a href="/contact" style="text-decoration:none;color:green">Contact us for help</a> or &nbsp;&nbsp;<a href="" ng-click="tryAgain()">TRY AGAIN</a></p>
                                        
                    </div>
                </section>
            </main>
